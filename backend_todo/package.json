{
  "name": "backend_todo",
  "version": "0.0.1",
  "description": "Backend ToDo",
  "main": "index.js",
  "repository": "https://github.com/DubiumEkb/todo",
  "homepage": "https://github.com/DubiumEkb/todo",
  "author": "DubiumEkb",
  "license": "MIT",
  "keywords": [
    "backend",
    "todo",
    "typescript",
    "node.js"
  ],
  "bugs": {
    "url": "https://github.com/DubiumEkb/todo/issues"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon ./src/server.ts",
    "start": "NODE_ENV=production node ./dist/server.js",
    "build": "rimraf dist && tsc && mkdir -p dist/logs && mkdir -p dist/config/env && cp src/config/env/*.env dist/config/env",
    "clean": "rimraf dist",
    "eslint": "eslint --debug src/",
    "eslint:fixed": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.ts",
    "format": "yarn run eslint:fixed && yarn run prettier",
    "generate-types": "tsc --declaration",
    "test-api-postman": "newman run path/to/your/postman-collection.json",
    "stop": "lsof -ti :5000 | xargs kill"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "log4js": "^6.9.1",
    "mongodb": "^6.0.0",
    "mongoose": "^7.5.0",
    "mongoose-unique-validator": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/log4js": "^2.3.5",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^29.6.4",
    "newman": "^5.3.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "private": true
}
