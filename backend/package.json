{
  "name": "backend_todo",
  "version": "0.0.1",
  "description": "backend todo",
  "repository": "https://github.com/DubiumEkb/todo",
  "author": "DubiumEkb",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon ./src/server.ts",
    "start": "NODE_ENV=production node ./dist/server.js",
    "build": "rimraf dist && tsc && mkdir -p dist/logs && mkdir -p dist/config/env && cp src/config/env/*.env dist/config/env",
    "clean": "rimraf dist",
    "eslint": "eslint --debug src/",
    "eslint:fixed": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.ts",
    "format": "yarn run eslint && yarn run prettier"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "finalhandler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/finalhandler": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
